<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/dark_background"
    android:gravity="center"
    android:padding="32dp">

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/logo_logo"
        android:contentDescription="App Logo"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/welcome_to_nfl_stats"
        android:textSize="24sp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginTop="24dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/your_ultimate_source_for_nfl_team_statistics_player_info_and_game_results"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:gravity="center"
        android:layout_marginTop="16dp"
        android:lineSpacingExtra="4sp"/>

    <Button
        android:id="@+id/btnGetStarted"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/pick_favourite_team"
        android:layout_marginTop="48dp"
        android:layout_gravity="center"
        android:paddingHorizontal="32dp"
        android:backgroundTint="@color/black"/>

    <!-- Add this LinearLayout for the flag images at the bottom -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="32dp"
        android:gravity="center"
        android:padding="8dp">

        <ImageButton
            android:id="@+id/btnWelsh"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_wales"
            android:contentDescription="Switch to Welsh"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:layout_marginEnd="16dp"
            android:adjustViewBounds="true"
            android:maxWidth="32dp"
            android:maxHeight="32dp"/>

        <ImageButton
            android:id="@+id/btnEnglish"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_uk"
            android:contentDescription="Switch to English"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:adjustViewBounds="true"
            android:maxWidth="32dp"
            android:maxHeight="32dp"/>
    </LinearLayout>
</LinearLayout>